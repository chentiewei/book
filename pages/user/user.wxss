.g-user{
  width:100%;
  height:225rpx;
  background: -webkit-linear-gradient(left, #363636,#3a3d42,#425164,#3e4750, #353439); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #363636, #3a3d42,#425164,#3e4750,#353439); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #363636,#3a3d42,#425164,#3e4750, #353439); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #363636 ,#3a3d42, #425164,#3e4750,#353439); /* 标准的语法 */
}
.g-user .m-user{
  text-align: center;
  margin-top:15rpx;
}
.g-user .m-user .s-user{
  width:125rpx;
  height:125rpx;
  line-height: 125rpx;
  vertical-align: middle;
  border-radius: 50%;
  margin:auto auto;
}
.g-user .m-user .s-user image{
  width:80%;
  height:80%;
  vertical-align: middle;
  border-radius: 50%;
  background: #fff;
}
.g-user .m-user .s-user text{
  font-size:25rpx;
  color:#fff;
  display: block;
  width:125rpx;
  height:30rpx;
  line-height: 30rpx;
  margin-top:25rpx;
}
.g-user .m-user button{
  font-size:17rpx;
  width:125rpx;
  height:45rpx;
  line-height: 45rpx;
  margin-top:15rpx;
}
.g-nav{
  background: #fff;
  width:100%;
  display: flex;
  padding: 30rpx 10rpx;
  border-bottom:15rpx solid #eee;
}
.g-nav>view{
  flex:1;
  text-align: center;
  font-size:26rpx;
  border-right:1rpx solid #eee;
}
.g-nav>view:last-child{
  border : 0;
}
.g-nav>view .num{
  font-size:35rpx;
  font-weight:500;
}
.g-link{
  width:100%;
  background: #fff;
  display: flex;
  flex-wrap: wrap;
  padding-top:30rpx;
  text-align: center;
}
.g-link .m-a{
  width:25%;
  height:100rpx;
  margin-bottom:30rpx;
}
.g-link .m-a image{
  width:60rpx;
  height:60rpx;
  border-radius: 15rpx;
}
.g-link .m-a view{
  font-size: 20rpx;
}